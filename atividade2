function calculaIdade(anos) {
	return `Daqui a ${anos} anos, ${this.nome} ter√° ${
		this.idade + anos
	} anos de idade.`;
}

const pessoa1 = {
	nome: 'Tassiana',
	idade: 23,
};

const pessoa2 = {
	nome: 'Nicole',
	idade: 5,
};

const animal = {
	nome: 'Mila',
	idade: 3,
};

console.log(calculaIdade.call(animal, 5));
//console.log(calculaIdade.apply(pessoa2, [24]));
